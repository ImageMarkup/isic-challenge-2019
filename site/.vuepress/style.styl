@import url('https://fonts.googleapis.com/icon?family=Material+Icons')

.hero
  background: lighten(#2c3e50, 93%)
  margin: 45px 0
  padding: 30px

.timeline
  ul
    border-left: 3px solid #e8e8e8
    margin: 45px 45px 45px 190px
    li
      margin: 20px 0 20px -6px
      padding: 0
      & > span
        background: #3eaf7c
        color: #ffffff
        display: inline-block
        padding: 5px 10px
        position: relative
        .date
          color: lighten(#2c3e50, 20%)
          display: block
          padding-right: 30px
          position: absolute
          right: 100%
          text-align: right
          top: 50%
          transform: translateY(-50%)
          width: 175px
        a
          color: #ffffff
          text-decoration: underline
          .icon
            color: #ffffff

.meta-info
  .chairs
    h4
      margin-bottom: 5px
    ul
      margin-top: 0
  .co-chairs
    ul
      li
        line-height: 1em
        margin-bottom: 10px
    em
      font-size: 11px
  .disclaimer
    background: #f8f8f8
    margin-top: 20px
    padding: 5px 25px
