@import url('https://fonts.googleapis.com/icon?family=Material+Icons')

.hero
  background: lighten(#2c3e50, 93%)
  margin: 45px 0
  padding: 30px

.track-email
  background: #3eaf7c
  color: #ffffff
  margin-top: -45px
  padding: 20px
  & > div
    align-items: center
    display: flex
    flex-wrap: wrap
    justify-content: center
    .failure
      align-items: center
      background: #FFCDD2
      box-shadow: 0 2px 5px rgba(0, 0, 0, .2)
      color: #F44336
      display: flex
      margin-bottom: 15px
      padding: 10px
      justify-content: center
      width: 100%
      .material-icons
        margin-right: 5px
    .track-email-content
      font-size: 18px
      font-weight: bold
      padding-right: 20px
    input[type=email]
      border: 0
      border-radius: 3px
      font-size: 16px
      outline: 0
      padding: 8px 10px
      transition: .5s
      min-width: 320px
      &:focus
        background: lighten(#3eaf7c, 85%)
        &::placeholder
          color: darken(#3eaf7c, 30%)
    input[type=submit]
      background: #2c3e50
      border: 0
      border-radius: 3px
      color: #ffffff
      cursor pointer
      font-size: 16px
      font-weight: bold
      outline: 0
      padding: 8px 10px

.timeline
  ul
    border-left: 3px solid #e8e8e8
    margin: 45px 45px 45px 190px
    li
      margin: 20px 0 20px -6px
      padding: 0
      & > span
        background: #3eaf7c
        color: #ffffff
        display: inline-block
        padding: 5px 10px
        position: relative
        .date
          color: lighten(#2c3e50, 20%)
          display: block
          padding-right: 30px
          position: absolute
          right: 100%
          text-align: right
          top: 50%
          transform: translateY(-50%)
          width: 175px
        a
          color: #ffffff
          text-decoration: underline
          .icon
            color: #ffffff

.meta-info
  .chairs
    h4
      margin-bottom: 5px
    ul
      margin-top: 0
  .co-chairs
    ul
      li
        line-height: 1em
        margin-bottom: 10px
    em
      font-size: 11px
  .disclaimer
    background: #f8f8f8
    margin-top: 20px
    padding: 5px 25px
